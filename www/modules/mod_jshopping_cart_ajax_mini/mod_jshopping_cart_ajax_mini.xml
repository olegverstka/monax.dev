<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
<name>Jshopping Cart Ajax mini</name>
    <creationDate>28/04/2014</creationDate>
    <author>Brooksus</author>
    <authorEmail>admin@brooksite.ru</authorEmail>
    <authorUrl>http://brooksite.ru</authorUrl>
    <copyright>brooksite.ru</copyright>
    <license>The MIT License (MIT)</license>
    <version>2.0.6</version>
    <description>Displays a JoomShopping ajax mini cart</description>
    <files>
        <filename module="mod_jshopping_cart_ajax_mini">mod_jshopping_cart_ajax_mini.php</filename>
								<filename>index.html</filename>
        <folder>tmpl</folder>
								<folder>css</folder>
								 <folder>img</folder>
									<folder>js</folder>
									<folder>element</folder>
    </files>
				
				<languages>
        <language
            tag="en-GB">en-GB.mod_jshopping_cart_ajax_mini.ini</language>
		    		<language
            tag="ru-RU">ru-RU.mod_jshopping_cart_ajax_mini.ini</language>
								<language
            tag="uk-UA">uk-UA.mod_jshopping_cart_ajax_mini.ini</language>
								</languages>    
				
    <config>
        <fields name="params">
            <fieldset name="basic"> 
												<field
                    name="add_jq"
                    type="radio"
                    default="1"
                    label="Подключить библиотеку JQuery"
                    description="Подключить библиотеку JQuery (1.6.2)">
                    <option 
                        value="1">Нет</option>
                    <option 
                        value="2">Да</option>
													</field> 
													<field
                    name="add_jq_noconflict"
                    type="radio"
                    default="1"
                    label="Подключить jQuery.noConflict"
                    description="Подключить jQuery.noConflict">
                    <option 
                        value="1">Нет</option>
                    <option 
                        value="2">Да</option>
													</field> 
													<field
                    name="auto_add_jq"
                    type="radio"
                    default="1"
                    label="Подключать библиотеку JQuery автоматически"
                    description="Подключать библиотеку JQuery автоматически (+)">
                    <option 
                        value="1">Да</option>
                    <option 
                        value="2">Нет</option>
													</field>
													<field
                    name="add_jq_migrate"
                    type="radio"
                    default="1"
                    label="jQuery migrate"
                    description="Подключить скрипт jQuery, обеспечивающий работоспособность модуля в том случае, если вы используете jQuery библиотеку версии выше 1.6.4">
                    <option 
                        value="1">Нет</option>
                    <option 
                        value="2">Да</option>
													</field> 
													<field type="spacer" hr="true"/>		
													<field
                    name="show_added_to_cart"
                    type="radio"
                    default="0"
                    label="Отображать текст - Товар добавлен в корзину"
                    description="Отображать текст - Товар добавлен в корзину-  в модальном окне или строкой">
                    <option
                        value="0">Строка</option>
                    <option
                        value="1">Модальное окно</option>
            </field>
													<field
                    name="mod_lib"
                    type="radio"
                    default="0"
                    label="Модальное окно"
                    description="Библиотека для открытия модального окна">
                    <option
                        value="0">DOMwindow (jQuery)</option>
                    <option
                        value="1">SqueezeBox (Mootools)</option>
            </field>
												<field
                    name="highlight_attr"
                    type="radio"
                    default="2"
                    label="Подсветить атрибуты"
                    description="Выделить цветом атрибуты товара при редиректе из списка товаров (при нажатии кнопки 'купить')">
                    <option
                        value="1">Да</option>
                    <option
                        value="2">Нет</option>
            </field>  
												<field type="spacer" hr="true"/>
												<field name="spacer01" type="spacer" default="" label="" description=""/>								 
													<field  
														name="donate" 
														type="donate" 
														size="" 
														default=""                    
														label="Оплата за труд" 
														description="Если вам нравится данное расширение, то у вас есть отличная возможность отблагодарить разработчика. Все вопросы можно задавать на сайте brooksite.ru, joomlaforum.ru или по электронной почте admin@brooksite.ru" 
														addfieldpath="/modules/mod_jshopping_cart_ajax_mini/element"/>
														
            </fieldset> 
												<fieldset	name="advanced">												
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" >
																				</field>																		
																		<field
																			name="cache"
																			type="list"
																			default="1"
																			label="COM_MODULES_FIELD_CACHING_LABEL"
																			description="COM_MODULES_FIELD_CACHING_DESC">
																			<option
																				value="1">JGLOBAL_USE_GLOBAL</option>
																			<option
																				value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
																		</field>
																		<field
																			name="cache_time"
																			type="text"
																			default="900"
																			label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
																			description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
																		<field
																			name="cachemode"
																			type="hidden"
																			default="itemid">
																			<option
																				value="itemid"></option>
																		</field>
																																	  
																</fieldset>
        </fields>
    </config>          
</extension>